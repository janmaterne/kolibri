		"prettier": "3.3.3",
		"pug": "3.0.3",
		"rimraf": "6.0.1",
		"stencil-awesome-test": "1.0.6",
		"terser": "5.36.0",
		"twig": "1.17.1",
		"typescript": "5.6.3"
	},
	"peerDependencies": {
		"adopted-style-sheets": "1.1.6-rc.6"
	},
	"files": [
		"assets",
		"dist",
		"doc",
